{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

<form method="post" class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
	{% if error %}
	<div class="mb-4 p-3 bg-red-100 text-red-700 rounded">
		{# {{ error.messageKey|trans(error.messageData, 'security') }} #}
		<p> vos informations ne sont pas correctes</p>
	</div>
	{% endif %}

	{% if app.user %}
	<div class="mb-4 p-3 bg-green-100 text-green-700 rounded">
		You are logged in as
		<strong>{{ app.user.userIdentifier }}</strong>,
		<a href="{{ path('app_logout') }}" class="text-blue-600 hover:underline">Logout</a>
	</div>
	{% endif %}

	<h1 class="text-2xl font-semibold mb-6 text-center">Please sign in</h1>

	<div class="mb-4">
		<label for="inputEmail" class="block text-gray-700 mb-1">Email</label>
		<input type="text" value="{{ last_username }}" name="email" id="inputEmail"
			class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:border-indigo-500"
			autocomplete="email" required autofocus>
	</div>

	<div class="mb-4">
		<label for="inputPassword" class="block text-gray-700 mb-1">Password</label>
		<input type="password" name="password" id="inputPassword"
			class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:border-indigo-500"
			autocomplete="current-password" required>
	</div>

	<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

	<div class="mb-4 flex items-center">
		<input type="checkbox" name="_remember_me" id="remember_me" class="mr-2">
		<label for="remember_me" class="text-gray-700">Se souvient de moi</label>
	</div>

	<button class="w-full  bg-gray-800 hover:bg-gray-900 text-white py-2 rounded font-semibold transition"
		type="submit">
		Sign in
	</button>
</form>

{% endblock %}